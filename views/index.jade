extends layout

block title 
    title Steam Randomizer
    meta(name='description', content='Picks a random game from your Steam account to play. For those paralyzed by choice')
block content
    a.hide-for-small-only(href="https://github.com/welps/steam-randomizer")
        img(style="position: absolute; top: 0; right: 0; border: 0;", src="https://camo.githubusercontent.com/e7bbb0521b397edbd5fe43e7f760759336b5e05f/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f677265656e5f3030373230302e706e67", alt="Fork me on GitHub", data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_green_007200.png")
    #main.row.small-16
        #content.small-12.text-center
            h1 Steam Randomizer
            if !user 
                p Paralyzed by choice? We'll pick a game for you to play.
                p.double-margin--top
                    a(href='auth/steam')
                        img(src='images/steamlogin.png' alt='Sign in through Steam')
            else
                p.greeting Hi <strong>#{user}</strong>. 
                p.show-after-animation We think you should play:
                p#start #[a.getGame.button.green SUMMON THE GAMES]
                #games.medium-push-2.medium-8.text-center
                input#steam-id(value='#{steamID}', type='hidden')
                p.options #[a.button.dark-red(href="auth/logout") LEAVE] or #[a.getGame.button.green TRY AGAIN]